*
*:before
*:after
  box-sizing: inherit
  margin: 0
  padding: 0

html
  box-sizing: border-box
  width: 100%
  height: 100%
  font-size: 62.5%

input
textarea
keygen
select
button
body
  font-size:1.35rem
  font-family: Helvetica, sans-serif
  color: $text-color
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale

body
  width: 100%
  height: 100%
  overflow-y: scroll
  overflow-x:hidden
  background-color: $background-color
  font-size: 1.35rem

@media $smallScreen
  body
    overflow: auto