#react
.container
  height: 100%
  width: 100%

.menu
  width: 100%
  text-align: center
  position: absolute
  z-index:1
  padding: 50px
  .link
    padding: 20px
    color: white
    font-size: 1.5rem
    text-decoration: none
    :visited
      color: white
    
  .active
    font-weight: bold
    
.pages
  position: relative
  width: 100%
  height: 100%
  top: 0
  left: 0
  
.page
  text-align: center
  position: absolute
  top: 50%
  left: 50%
  transform: translate(-50%, -50%)
  width: 300px
  
  img
    width: 100%
    height: auto
    border-radius: 100%
    border: 3px solid white
    
  h1
    padding: 30px

@media $smallScreen
  .container
    padding-top 60px